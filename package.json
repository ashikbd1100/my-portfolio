{
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "postcss ./assets/style/tailwind.css -o ./assets/style/main.css",
    "build:watch": "postcss ./assets/style/tailwind.css -o ./assets/style/main.css --watch",
